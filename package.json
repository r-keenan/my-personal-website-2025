{
	"name": "my-personal-website-2025",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"start": "node build",
		"start:prod": "NODE_ENV=production node build",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@faker-js/faker": "^9.9.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-node": "^5.2.13",
		"@sveltejs/kit": "^2.21.4",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "^1.6.3",
		"flowbite-svelte-icons": "^2.1.1",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"jsdom": "^26.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.33.18",
		"svelte-check": "^4.0.0",
		"sveltekit-superforms": "^2.24.1",
		"tailwindcss": "^4.1.5",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.0",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"@aws-sdk/client-cloudwatch-logs": "^3.787.0",
		"@aws-sdk/client-secrets-manager": "^3.777.0",
		"@portabletext/types": "^2.0.13",
		"@sanity/client": "^6.28.4",
		"@sanity/types": "^3.81.0",
		"@sveltejs/adapter-vercel": "^5.7.2",
		"axios": "^1.9.0",
		"zod": "^3.24.2"
	}
